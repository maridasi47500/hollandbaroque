
<div class="page-header split-header">
  <div class="container">
    <div class="row">
      <div class="page-header-content col-12 col-lg-6">
                  <a class="back-link" href="<%=url_for(controller:"news",action:"index")%>" title="<%=t('onpages.backtonews')%>"><%=t('onpages.backtonews')%></a>
                <span class="post-date"><%=@post.date%></span>
        <h1><%=@post.title%></h1>
        <p><%=@post.subtitle%></p>
      </div>
      <div class="col-12 col-lg-6 page-header-visual">
        <img class="concert-card-image"
          src="<%=@post.image%>"
          alt="<%=@post.title%>" />
      </div>
    </div>
  </div>
</div>
<div class="news-content">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-10 offset-lg-1">
        

          <article class="page-content">
    
    
<%@contents.each do |x|%>
    
<%=render "listen/#{x.model_name.singular}", content: x%>
 
    <%end%>


</article>


<div class="news-cards news-cards-related">
	<div class="news-cards-cards news-cards-cards-large">
	</div>
</div>	


<%=render "subscribe"%>   </div>
  </div>
</div>

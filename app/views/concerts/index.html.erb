<script>
window.onload=function(){
LocationFilter.onclick = function(){
ConcertFilterLocations.dataset.state=(ConcertFilterLocations.dataset.state==='closed' ? 'open' : 'closed');
return false;
}
MonthFilter.onclick = function(){
ConcertFilterMonths.dataset.state=(ConcertFilterMonths.dataset.state==='closed' ? 'open' : 'closed');
return false;
}
}
</script>